@model PizzeriaApp.Models.Pizza

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Pizza</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DoughType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DoughType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SmallPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SmallPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MediumPrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MediumPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LargePrice)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LargePrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PizzaIngredients)
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.PizzaIngredients)
            {
                <span>@item.Ingredient.Name</span>
            }
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
